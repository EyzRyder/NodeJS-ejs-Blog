<!DOCTYPE html>
<html lang="en">

<%-  include('./partials/head.ejs') %>

<body class="m-5 py-0 px-5 font-body max-h-screen max-w-screen">

<%- include('./partials/nav.ejs') %>

    <div class="ml-5">
        <h2 class="font-bold mb-10">All Blogs</h2>
        <% if(blogs.length> 0){%>

            <% blogs.forEach(blog=>{%>
                <a class="block my-10 mx-0 pl-8 border-l-[6px] border-solid border-[crimson]" href="/blogs/<%= blog._id %>" >
                <h3 class=" hover:text-[crimson] font-bold capitalize mb-2"><%= blog.title %></h3>
                <p class=""><%= blog.snippet%></p>
                </a>
                <%})%>

        <% } else { %>
            <p class="">there are no blog to display...</p>
        <%}%>

    </div>

    <%- include('./partials/footer.ejs') %>

</body>

</html>